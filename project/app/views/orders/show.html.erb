<%= content_for :show do %>
  <%= stylesheet_link_tag 'items', media: 'all', 'data-turbolinks-track': 'reload' %>

  <div class="main-area">

    <div class="row" style="margin: 10px 0">
      <div class="col-md-4 my-auto">
        <div class="thumb_container">
          <%= image_tag @order.item.cover_img, class: 'cover' %>
        </div>
      </div>
      <div class="col-md-5 item-title my-auto">
        <b><%= @order.item.title %></b> × <%= @order.num %> <br />
        <i>Released by: <%= @order.item.user.username %></i>
      </div>
      <div class="col-md-3 my-auto" style="align-items: center">
        <span class="price">￥ <%= @order.item.price.to_f * @order.num.to_f %></span>
      </div>
    </div>


    <table class="table">
      <thead>
      <tr>
        <th scope="col" style="padding: 0"></th>
        <th scope="col" style="padding: 0"></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th scope="row">
          Address
        </th>
        <td>
          <div class="card">
            <div class="card-body text-left">
              <h6 class="card-subtitle mb-2">
                <b><%= @order.address.recipient %></b> &nbsp;  <%= @order.address.phone_number %>
              </h6>
              <p class="card-text text-muted"><%= @order.address.district %>  <%= @order.address.postal_code %> <br /> <%= @order.address.details %></p>
            </div>
          </div>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Remark
        </th>
        <td>
          <%= @order.remark %>
        </td>
      </tr>

      <tr>
        <th scope="row">
          EMS code
        </th>
        <td>
          <%= @order.EMS_code %>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Created at
        </th>
        <td>
          <%= @order.created_at %>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Updated at
        </th>
        <td>
          <%= @order.updated_at %>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Order State
        </th>
        <td>
          <h5><%= state_badge(@order.state) %></h5>
        </td>
      </tr>
      </tbody>
    </table>

    <div class="container-fluid">
      <%# Only when user is consumer can buy items %>

      <% if can? :edit, @order and @order.state != 2 %>
        <div class="row">
          <div class="col-md-12">
            <%= link_to edit_order_path, class: 'btn btn-info btn-block' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg>
              Options
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to orders_path, class: 'btn btn-light btn-block' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
            </svg>
            Back
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>
