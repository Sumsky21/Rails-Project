<% content_for :show do %>
  <%= stylesheet_link_tag 'items', media: 'all', 'data-turbolinks-track': 'reload' %>

  <div class="main-area">

    <table class="table text-left">
      <thead>
      <tr>
        <th scope="col" style="padding: 0"></th>
        <th scope="col" style="padding: 0"></th>
      </tr>
      </thead>
      <tbody>
      <tr>
        <th scope="row">
          Name
        </th>
        <td>
          <%= @category.name %>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Badge Style
        </th>
        <td>
          <span class="<%= 'badge text-light bg-'.concat(@category.badge_style) %>" id="badge-prev">
            <%= @category.name %>
          </span>
        </td>
      </tr>

      <tr>
        <th scope="row">
          Items of this category
        </th>
        <td>
          <ul>
            <% @category.items.collect do |item| %>
              <li>
                <%= link_to item.title, item_path(item.id) %>
              </li>
            <% end %>
          </ul>
        </td>
      </tr>
      </tbody>
    </table>

    <div class="container-fluid">
      <%# Only when user is consumer can buy items %>
      <% if can? :edit, @category %>
        <div class="row">
          <div class="col-md-12">
            <%= link_to edit_category_path, class: 'btn btn-info btn-block' do %>
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456l-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5v11z"/>
              </svg>
              Edit
            <% end %>
          </div>
        </div>
      <% end %>
      <div class="row">
        <div class="col-md-12">
          <%= link_to categories_path, class: 'btn btn-light btn-block' do %>
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-arrow-return-left" viewBox="0 0 16 16">
              <path fill-rule="evenodd" d="M14.5 1.5a.5.5 0 0 1 .5.5v4.8a2.5 2.5 0 0 1-2.5 2.5H2.707l3.347 3.346a.5.5 0 0 1-.708.708l-4.2-4.2a.5.5 0 0 1 0-.708l4-4a.5.5 0 1 1 .708.708L2.707 8.3H12.5A1.5 1.5 0 0 0 14 6.8V2a.5.5 0 0 1 .5-.5z"/>
            </svg>
            Back
          <% end %>
        </div>
      </div>
    </div>
  </div>

<% end %>



