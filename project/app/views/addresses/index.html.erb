
<%= render :partial => 'layouts/share_head', :locals => {title: 'Addresses',
                                                         details: 'Everyone can create a addresses for receiving products. But one can only see his/her own addresses (except Admin).',
                                                         buttons: @button_group} %>

<table>
  <thead>
    <tr>
      <th>Recipient</th>
      <th>District</th>
      <th>Details</th>
      <th>Postal code</th>
      <th>Phone number</th>
      <% if current_user.usertype == 0 %>
        <th>Created by</th>
      <% end %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td class="item-title"><%= address.recipient %></td>
        <td><%= address.district %></td>
        <td><%= address.details %></td>
        <td><%= address.postal_code %></td>
        <td style="font-style: italic"><%= address.phone_number %></td>
        <% if current_user.usertype == 0 %>
          <td><%= address.user.username %></td>
        <% end %>
        <td><%= link_to 'Show', address, class: 'btn btn-outline-info' %></td>
        <td><%= link_to 'Edit', edit_address_path(address), class: 'btn btn-outline-secondary' %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
