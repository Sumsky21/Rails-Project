<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name), layout: :horizontal,
                       label_col: "col-sm-4 text-right", control_col: "col-sm-8",
                       html: { method: :put, class: 'form-signin text-center'}) do |f| %>

  <h2 class="h2 mb-3 font-weight-normal" style="text-align: center; margin-top: 10px">Edit <%= resource_name.to_s.humanize %></h2>

  <%= f.text_field :username, autofocus: true, autocomplete: "username", required: true%>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", required: true %>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <%= f.password_field :password, autocomplete: "new-password", placeholder: @minimum_password_length.to_s + ' characters minimum',
                       help: "Leave blank if you don't want to change it."%>

  <%= f.password_field :password_confirmation, autocomplete: "new-password"%>

  <%= f.password_field :current_password, autocomplete: "current-password", help: 'We need your current password to confirm your change.', required: true %>

  <div class="actions">
    <%= f.submit "Update", class: 'btn btn-lg btn-secondary btn-block' %>
  </div>



  <div style="text-align: center"><%= link_to "Back", :back %></div>
<% end %>

<h5 style="margin-top: 20px; text-align: center">Unhappy?</h5>
<div style="margin: auto; display: flex; justify-content: center; margin-bottom: 20px">
  <%= button_to "Delete my account", registration_path(resource_name), class: 'btn btn-lg btn-danger',
                data: { confirm: "Are you sure?" }, method: :delete %>
</div>
