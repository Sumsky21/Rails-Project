<%= stylesheet_link_tag 'users', media: 'all', 'data-turbolinks-track': 'reload' %>
<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: 'form-signin text-center'}) do |f| %>

  <h2 class="h2 mb-3 font-weight-normal" style="margin-top: 20px">Log in</h2>

  <%= f.email_field :email, autofocus: true, autocomplete: "email", label_as_placeholder: true, required: true %>

  <%= f.password_field :password, autocomplete: "current-password", label_as_placeholder: true, required: true %>

  <% if devise_mapping.rememberable? %>
    <div class="checkbox mb-3">
      <%= f.check_box :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'btn btn-lg btn-primary btn-block'%>
  </div>
<% end %>

<div class="mt-5 mb-3" style="text-align: center">
  <%= render "users/shared/links" %>
</div>

