
<%= render :partial => 'layouts/share_head', :locals => {title: 'B2C E-Commerce Platform based on Rails.',
                                                         details: 'Make Business Easy around the world.',
                                                         buttons: @button_group } %>

<div class="album py-5 bg-light">
  <div class="container">
    <div class="row">
      <% @items.each do |item| %>
      <div class="col-md-4">
        <div class="card mb-4 shadow-sm">
          <%= link_to item do %>
            <div class="thumb_container_index">
              <%= image_tag item.cover_img, class: 'cover' %>
            </div>
          <% end %>
          <div class="card-body">
            <p class="card-text">
              <span class="item-title"><b><%= item.title %></b></span>  <span class="price" style="float: right">ï¿¥<%= item.price %></span> <br />
              Released by: <%= item.user.username %>
            </p>
            <div class="d-flex justify-content-between align-items-center">
              <div class="btn-group">
                <%= link_to 'Detail', item, class: 'btn btn-sm btn-outline-info' %>
                <% if can? :destroy, item %>
                  <%= link_to 'Delete', item, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-outline-danger' %>
                <% end %>
              </div>
              <small class="text-muted"><%= time_ago_in_words(item.created_at).concat(' ago') %> &nbsp;  <%= item.orders.length.to_s.concat(' sales') %></small>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>

  </div>
</div>


